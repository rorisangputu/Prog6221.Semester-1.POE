using System;
namespace Proji
{
	public class Recipe
	{	
	//declaring array and recipe name variables
		private string[] ingredients;
		private string[] units;
		private string[] steps;
		private double[] quantities;
		private string recipeName;
		

		public Recipe()
		{
		//Intializing Arrays
			ingredients = new string[0];
			units = new string[0];
			steps = new string[0];
			quantities = new double[0];
			recipeName = null;

		}
		
		//Function takes input from user and adds to relevant arrays
		public void RecipeDetails()
		{
			//Prompting user to enter the number of ingredients
			Console.WriteLine("Enter number of ingredients: ");
			int numOfIngredients = int.Parse(Console.ReadLine());
			
			//Setting number of ingredients to array size
			ingredients = new string[numOfIngredients];
			quantities = new double[numOfIngredients];
			units = new string[numOfIngredients];
			
			
			//User prompt to add details like name, quantity 
			// and units of measurement of the recipe
			
			for (int r = 0; r < numOfIngredients; r++)
			{
			Console.WriteLine("Name: ");
			ingredients[r] =  Console.ReadLine();
			Console.WriteLine("Quantity: ");
			quantities[r] = double.Parse(Console.ReadLine());
			}
			
			//Prompting user to enter the number of steps
			Console.WriteLine("Number of steps: ");
			
			//numSteps holds the number of steps
			int numSteps = int.Parse(Console.ReadLine());
			
			//intializing step array with correct size
			steps = new string[numSteps];
			
			//Prompting user to enter steps. 
			for (int o = 0; o < numSteps; o++)
			{
				Console.WriteLine($"Step {o + 1}: ");
				steps[o] = Console.ReadLine();
			}

		}
		
		public void ClearDetails()
		{
		
		}
		
		public void Scale()
		{
		
		}
	}
}



